<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="3dp"
    android:padding="5dp"
    android:background="@color/PrimaryColorDark"
   >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAuthorIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/unknown_avatar" />

    <TextView
        android:id="@+id/txtAuthorName"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/imgAuthorIcon"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Stavros Tsalikis"
        android:textColor="@color/white_text"/>

    <TextView
        android:id="@+id/txtPubTime"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_below="@id/txtAuthorName"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/imgAuthorIcon"
        android:textColor="@color/white_text"
        android:textSize="8sp"
        tools:text="2018/05/05" />



</RelativeLayout>
